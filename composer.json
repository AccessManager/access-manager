{
    "name": "access-manager/access-manager",
    "description": "The Hotspot Management System",
    "keywords": ["access manager","wifi", "hotspot", "mikrotik"],
    "license": "MIT",
    "type": "project",
    "homepage": "http://accessmanager.in",
    "require": {
        "php": ">=5.6.4",
        "access-manager/base": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "psr-4": {
            "AM3\\Modules\\": "Modules",
            "AM3\\Base\\": "Modules/Base/src"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
